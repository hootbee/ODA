{
  "compilerOptions": {
    "target": "es2015",
    "lib": ["ES2021", "DOM"],
    "module": "commonjs",
    "moduleResolution": "Node",
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "plugins": [{ "transform": "typia/lib/transform" }]
  },
  "include": ["src/**/*.ts"]
}
